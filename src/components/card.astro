---
import Badge from "@components/ui/badge.astro";
const { color = "DEFAULT", size = "md", class: className } = Astro.props;

const colors = {
  DEFAULT: "bg-gray-50",
  indigo: "bg-indigo-50",
  purple: "bg-purple-50",
};
---

<div
  class:list={[
    "rounded-2xl bg-gray-50 p-8 shadow ring-1 ring-gray-200/50 transition-all hover:shadow-lg",
    className,
  ]}>
  <div
    class:list={[
      "relative flex h-auto items-start justify-center overflow-hidden",
      size === "sm" ? "lg:h-90" : "lg:h-90",
    ]}>
    <div
      class="absolute inset-0 z-10 bg-gradient-to-t from-gray-50 via-transparent">
    </div>
    <slot name="image" />
  </div>
  <div class="mt-2">
    {
      Astro.slots.has("badge") && (
        <Badge color={color}>
          <slot name="badge" />
        </Badge>
      )
    }
    <h3 class="mt-2 text-xl font-medium lg:text-2xl"><slot name="title" /></h3>
    <p class="mt-2 text-slate-600 [text-wrap:balance]"><slot name="desc" /></p>
  </div>
</div>
