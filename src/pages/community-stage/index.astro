import CommSched from "../../assets/images/community-stage/community-stage-schedule.jpg";
---

<Layout title="About" footerMargin={false}>
  <Container>
    <Sectionhead>
      <Fragment slot="badge">What's on!</Fragment>
      <Fragment slot="title">Community Stage</Fragment>
      <Fragment slot="desc">
        The Community Stage is located in the IGA Carpark down the corner of
        Anderson and Willis. A place to showcase local dance schools, choirs,
        orchestras and more. Please note, there is no payment for acts on the
        Community Stage.
        <Picture
          src={CommSched}
          alt="Community Stage Schedule"
          formats={["avif", "webp"]}
          class="h-full w-full object-contain"
          loading="lazy"
        />
      </Fragment>
    </Sectionhead>
  </Container>
</Layout>
