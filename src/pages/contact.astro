---
import { Icon } from "astro-icon/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">Got Questions? We are here to help.</Fragment>
    </Sectionhead>

    <div class="mx-auto mt-16 grid max-w-4xl gap-10 md:grid-cols-2">
      <div>
        <h2 class="text-2xl font-medium text-gray-800">
          Contact Yarraville Festival
        </h2>
        <p class="mt-3 text-lg leading-relaxed text-slate-500">
          Have something to say? We are here to help. Fill in the form.
        </p>
        <div class="mt-5">
          <div class="mt-2 flex items-center space-x-2 text-gray-600">
            <Icon class="h-4 w-4 text-gray-400" name="uil:map-marker" />
            <span>Yarraville Village, Melbourne 3013</span>
          </div><div class="mt-2 flex items-center space-x-2 text-gray-600">
            <Icon class="h-4 w-4 text-gray-400" name="uil:envelope" />
            <a href="mailto:hello@astroship-pro.com">
              manager@yarravillefestival.com.au
            </a>
          </div>
          <!-- <div class="mt-2 flex items-center space-x-2 text-gray-600">
            <Icon class="h-4 w-4 text-gray-400" name="uil:phone" />
            <a href="tel:+1 (987) 4587 899">+1 (987) 4587 899</a>
          </div> -->
        </div>
      </div>
      <div class="mb-5 rounded-xl bg-slate-100 p-5 md:p-8">
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
